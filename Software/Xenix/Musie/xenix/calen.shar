X    print_line(1, SOLID);		/* print bottom row */
X    print_dates(curr, 4, just);
X    print_line(2, OPEN);
X    print_divider(curr->dates[5]);	/* divider for 23/30, 24/31 */
X
X    print_line(3, OPEN);
X    print_dates(curr, 5, !just);	/* print 6th line (30/31) at bottom */
X    print_line(1, SOLID);
X    }
